# Database
DATABASE_URL=postgresql://localhost/indieout_development
DB_PASSWORD=password

# Rails
RAILS_ENV=development
RAILS_MASTER_KEY=your-rails-master-key-here
RAILS_LOG_TO_STDOUT=true

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Redis (for caching and background jobs)
REDIS_URL=redis://localhost:6379/0

# File Uploads
SHRINE_STORAGE=file
# For S3 storage in production:
# SHRINE_STORAGE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET=indieout-uploads

# Email Configuration
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USER_NAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_DOMAIN=localhost
DEFAULT_FROM_EMAIL=noreply@indieout.com

# Stripe Payment (when implemented)
# STRIPE_PUBLISHABLE_KEY=pk_test_xxx
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# Application Settings
DEFAULT_CURRENCY=USD
DEFAULT_LOCALE=en

# Security
SECRET_KEY_BASE=your-secret-key-base

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PAYMENT_PROCESSING=false

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=UA-xxx
# SENTRY_DSN=https://xxx@sentry.io/xxx