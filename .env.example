# Database
DATABASE_URL=postgresql://username:password@localhost:5432/outdoor_marketplace

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

