SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# App Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=OutdoorMarketplace