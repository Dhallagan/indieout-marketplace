# Ignore git repository
.git/
.gitignore

# Ignore bundler config
/.bundle

# Ignore all default log files
/log/*
!/log/.keep

# Ignore all temp files
/tmp/*
!/tmp/.keep
!/tmp/pids/
!/tmp/pids/.keep

# Ignore development/test files
/spec
/test
.rspec
.rubocop.yml

# Ignore node_modules
/node_modules

# Ignore yarn files
yarn-error.log

# Ignore environment files
.env*
!.env.example

# Ignore storage (uploaded files)
/storage/*
!/storage/.keep

# Ignore master key and credentials
/config/master.key
/config/credentials/*.key

# Ignore coverage reports
/coverage

# Ignore public assets - these are compiled in production
/public/assets
/public/packs
/public/packs-test

# Ignore documentation
*.md
README*
docs/

# Ignore OS generated files
.DS_Store
Thumbs.db

# Ignore editor files
.vscode/
.idea/